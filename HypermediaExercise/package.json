{
  "name": "scaffolding",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon --watch 'src/**/*.ts' --exec ts-node 'src/index.ts'",
    "build": "tsc",
    "start": "NODE_ENV=development node build/index.js",
    "test": "NODE_ENV=test jest --forceExit --verbose --runInBand"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "testEnvironment": "node",
    "coverageReporters": [
      "html"
    ]
  },
  "repository": {
    "type": "git"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash": "4.17.15",
    "morgan": "^1.10.0",
    "pg": "8.2.1",
    "reflect-metadata": "0.1.13",
    "tslib": "2.0.0",
    "tslint": "6.1.2",
    "typedi": "0.8.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/jest": "26.0.4",
    "@types/json2csv": "5.0.1",
    "@types/jsonwebtoken": "8.5.0",
    "@types/lodash": "4.14.157",
    "@types/node": "14.0.14",
    "jest": "26.1.0",
    "nodemon": "^2.0.4",
    "ts-jest": "26.1.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
